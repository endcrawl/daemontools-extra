#!/usr/bin/env python

import sys
import os
import socket

prog = sys.argv.pop(0)
hostport = sys.argv.pop(0)
host, port = hostport.split(':')
port = int(port)
s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.bind((host, port))
s.listen(128)
os.dup2(s.fileno(),0)
os.close(s.fileno())
os.execvp(sys.argv[0],sys.argv)

